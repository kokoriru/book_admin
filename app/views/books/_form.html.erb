<%= form_for @book, url: publisher_book_path(@publisher, @book)do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
